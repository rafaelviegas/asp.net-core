@{

    ViewData["title"] = "Carrinho";

    @model List<ItemPedido>
}

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6"> Item</div>
            <div class="col-md-2"> Preço unitário</div>
            <div class="col-md-2"> Quantidade</div>
            <div class="col-md-2"> 
                <span class="pull-right">Subtotal</span>
            </div>
        </div>

    </div>
    <div class="panel-body">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-3">
                <img src="~/images/produtos/small_@(item.Id).jpg" />
            </div>
            <div class="col-md-3">@item.Produto.Nome</div>
            <div class="col-md-2">R$ @item.PrecoUnitario</div>
            <div class="col-md-2">@item.Quantidade</div>
            <div class="col-md-2">
                <span class="pull-right">
                    R$ @item.Subtotal
                </span>
            </div>
        </div>
    }
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-10"> Total: 4 itens</div>
            <div class="col-md-2">
                <span class="pull-right">
                    R$ 210,00
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-success pull-right" asp-action="Resumo">Finalizar Pedido</a>

    </div>
</div>